<div class='p-10 bg-white border border-gray-200 rounded-lg shadow-sm dark:bg-gray-800 dark:border-gray-700 w-full'>
    <%= form_with model: task do |f| %>
        <% if task.errors.any? %>
        <div class="flex p-4 mb-4 text-sm text-red-800 rounded-lg bg-red-50 dark:bg-gray-700 dark:text-red-400" role="alert">
            <svg class="shrink-0 inline w-4 h-4 me-3 mt-[2px]" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                <path d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5ZM9.5 4a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3ZM12 15H8a1 1 0 0 1 0-2h1v-3H8a1 1 0 0 1 0-2h2a1 1 0 0 1 1 1v4h1a1 1 0 0 1 0 2Z"/>
            </svg>
            <span class="sr-only">Danger</span>
            <div>
                <span class="font-medium">Ensure that these requirements are met:</span>
                <ul class="mt-1.5 list-disc list-inside">
                    <% task.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                    <% end %>
                </ul>
            </div>
        </div>
        <% end %>
        <div class='my-5'>
            <%= f.label :name, class:'label' %>
            <%= f.text_field :name , class: 'border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 text-gray-900 dark:text-white', placeholder: "Task name"%>
        </div>
        <div class="my-5">
            <%= f.label :create_time, class:'label'%>
            <%= f.date_field :create_time , class: 'border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 text-gray-900 dark:text-white'%>
        </div>
        <div class="my-5">
            <%= f.label :end_time, class:'label'%>
            <%= f.date_field :end_time , class: 'border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 text-gray-900 dark:text-white'%>
        </div>
        <div class="my-5">
            <%= f.label :status , class: 'label'%>
            <%= f.select :status, options_for_select(status_options_key), {} , {class: 'border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 text-gray-900 dark:text-white'} %>
        </div>
        <div class='my-5'>
            <%= f.label :priority, class: 'label' %>
            <%= f.select :priority, options_for_select(priority_options_key) , {} , {class: 'border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 text-gray-900 dark:text-white'}%>
        </div>
        <div class='my-5'>
            <%= f.label :tag, class: 'label' %>
            <div class="flex flex-col gap-2 mt-2 mx-5">
            <% Tag.all.each do |tag| %>
                <div class="flex flex-row gap-2">
                    <%= check_box_tag "task[tag_ids][]",
                                    tag.id,
                                    @task.tags.include?(tag),
                                    id: "task_tag_#{tag.name}" %>
                    <%= label_tag "task_tag_#{tag.name}", t(tag.name, scope: %i[activerecord attributes task tags]), class: 'block text-sm font-medium text-gray-900 dark:text-white' %>
                </div>
            <% end %>
        </div>
        <div class='flex flex-row mt-20 gap-4 justify-end w-full'>
            <% if type=="edit"%>
                <%= link_to task_path(@task), class:'button' do%>
                    <%= t('todo.back') %>
                <% end %>
            <% else %>
                <%= link_to tasks_path, class:'button' do%>
                    <%= t('todo.back') %>
                 <% end %>
            <% end %>
            <div class="button">
                <%= f.submit %>
            </div>
        </div>
    <% end %>

</div>