<div class='flex flex-row justify-end items-center px-5 gap-5'>
    <% if logged_in? %>
        <p> <%= t('todo.welcome')%>, <%= current_user.name%> !</p>
        <%= button_to User.human_attribute_name(:logout), logout_path, method: :delete, class: 'inline-block px-8 py-2 bg-[#96a78d] text-white rounded-lg hover:bg-gray-300 text-sm font-medium text-gray-900'%>
    <% else %>
        <%= link_to User.human_attribute_name(:login), login_path, class: 'inline-block px-8 py-2 bg-[#96a78d] text-white rounded-lg hover:bg-gray-300 text-sm font-medium text-gray-900'%>
    <% end %>
    <div>
        <%= link_to t('todo.language_switch'), url_for(locale: I18n.locale == :zh ? :en : :zh), class: 'inline-block px-8 py-2 bg-[#96a78d] text-white rounded-lg hover:bg-gray-300 text-sm font-medium text-gray-900'%>
    </div>
</div>