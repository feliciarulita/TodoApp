<%= render "headerMain" %>
<div class='px-40 mt-10 mb-5'>
    <nav class="flex" aria-label="Breadcrumb">
    <ol class="inline-flex items-center space-x-1 md:space-x-2 rtl:space-x-reverse">
        <li class="inline-flex items-center">
        <a href="<%= admin_users_path %>" class="inline-flex items-center text-sm font-medium text-gray-700 hover:text-blue-600 dark:text-gray-400 dark:hover:text-white">
            <svg class="w-3 h-3 me-2.5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
            <path d="m19.707 9.293-2-2-7-7a1 1 0 0 0-1.414 0l-7 7-2 2a1 1 0 0 0 1.414 1.414L2 10.414V18a2 2 0 0 0 2 2h3a1 1 0 0 0 1-1v-4a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v4a1 1 0 0 0 1 1h3a2 2 0 0 0 2-2v-7.586l.293.293a1 1 0 0 0 1.414-1.414Z"/>
            </svg>
            <%= t('todo.users_list') %>
        </a>
        </li>
        <li aria-current="page">
        <div class="flex items-center">
            <svg class="rtl:rotate-180 w-3 h-3 text-gray-400 mx-1" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4"/>
            </svg>
            <span class="ms-1 text-sm font-medium text-gray-500 md:ms-2 dark:text-gray-400"><%= @user.name%></span>
        </div>
        </li>
    </ol>
    </nav>
</div>
<div class='flex flex-col items-start px-40'>
    <div class='flex flex-col items-center mt-10 w-full'>
        <div class='p-10 bg-white border border-gray-200 rounded-lg shadow-sm hover:bg-gray-100 dark:bg-gray-800 dark:border-gray-700 dark:hover:bg-gray-700 w-full'>
            <div class='m-5 text-xl tracking-tight text-gray-900 dark:text-white'><%= User.human_attribute_name(:name) %> :  <%= @user.name %></div>
            <div class='m-5 text-xl tracking-tight text-gray-900 dark:text-white'><%= User.human_attribute_name(:email) %> :  <%= @user.email %></div>
            <div class='m-5 text-xl tracking-tight text-gray-900 dark:text-white'><%= User.human_attribute_name(:role) %> :  <%= @user.manager ? "Admin" : "User" %></div>
            <div class='m-5 text-xl tracking-tight text-gray-900 dark:text-white'><%= User.human_attribute_name(:task_num) %> : <%= @user.tasks_count %></div>

            <div class='grid grid-cols-3 rounded-lg bg-gray-200 dark:bg-gray-600 shadow shadow-lg w-full p-5 gap-5 h-96 overflow-auto'>
                <% if @tasks.any? %>
                    <% @tasks.each do |task| %>
                        <div class="max-w-sm p-6 bg-white border border-gray-200 rounded-lg shadow-sm dark:bg-gray-800 dark:border-gray-700">
                            <a href="<%= task_path(task) %>">
                                <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white"><%= task.name %></h5>
                            </a>
                            <p class="mb-3 font-normal text-gray-700 dark:text-gray-400"><%= Task.human_attribute_name(:create_time) %>: <%= task.create_time.strftime("%Y-%m-%d") %></p>
                            <p class="mb-3 font-normal text-gray-700 dark:text-gray-400"><%= Task.human_attribute_name(:end_time) %>: <%= task.end_time.strftime("%Y-%m-%d") %></p>
                            <p class="mb-3 font-normal text-gray-700 dark:text-gray-400"><%= Task.human_attribute_name(:status) %>: <%= task.status.humanize %></p>
                            <p class="mb-3 font-normal text-gray-700 dark:text-gray-400"><%= Task.human_attribute_name(:priority) %>: <%= task.priority.humanize %></p>
                            <a href="<%= task_path(task) %>" class="inline-flex items-center px-3 py-2 text-sm font-medium text-center text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
                                Details
                                <svg class="rtl:rotate-180 w-3.5 h-3.5 ms-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
                                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
                                </svg>
                            </a>
                        </div>
                    <% end %>
                <% else %>
                <div class='flex col-start-2 w-full h-full justify-center items-center'>
                    <p class='text-xl'> <%= t('todo.no_tasks') %> </p>
                </div>
                <% end %>
            </div>
            
            <div class='flex flex-row mt-40 gap-4 justify-end w-full'>
                <%= link_to edit_admin_user_path(@user), class:'button' do%>
                    <%= t('todo.edit_user') %>
                <% end %>
                <%= link_to admin_users_path, class:'button' do%>
                    <%= t('todo.back') %>
                <% end %>
                <%= button_to admin_user_path(@user), class:'button', method: :delete do%>
                    <%= t('todo.delete_user') %>
                <% end %>
            </div>
        </div>
    </div>
</div>